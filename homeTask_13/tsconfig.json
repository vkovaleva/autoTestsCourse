{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "app/*": ["./src/*"]
    },
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./built",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
