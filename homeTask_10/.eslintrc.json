{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "max-classes-per-file": "off",
    "import/extensions": "off",
    "no-console": ["error", { "allow": ["log"] }]
  },
  "plugins": ["prettier"]
}

